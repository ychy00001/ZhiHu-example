<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingLeft="10dp"
              android:paddingBottom="20dp"
              android:paddingTop="10dp"
              android:paddingRight="10dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/ll_sina"
            android:orientation="vertical"
            android:clickable="true"
            android:background="?attr/selectorListItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp">

            <ImageButton
                android:padding="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:clickable="false"
                android:src="?attr/ic_share_weibo"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/text_color_gray"
                android:text="新浪微博"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_weixin"
            android:orientation="vertical"
            android:background="?attr/selectorListItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:clickable="true"
            android:paddingBottom="5dp">

            <ImageButton
                android:padding="15dp"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="?attr/ic_share_weixin"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/text_color_gray"
                android:text="微信"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_weixin_friend"
            android:orientation="vertical"
            android:background="?attr/selectorListItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:clickable="true"
            android:paddingBottom="5dp">

            <ImageButton
                android:padding="15dp"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="?attr/ic_share_friend"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/text_color_gray"
                android:text="微信朋友圈"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/ll_qq"
            android:orientation="vertical"
            android:background="?attr/selectorListItem"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp">

            <ImageButton
                android:padding="15dp"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="?attr/ic_share_qq"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/text_color_gray"
                android:text="QQ"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_qzone"
            android:orientation="vertical"
            android:background="?attr/selectorListItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:clickable="true"
            android:paddingBottom="5dp">

            <ImageButton
                android:padding="15dp"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="?attr/ic_share_qzone"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/text_color_gray"
                android:text="QQ空间"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:visibility="invisible">

            <ImageButton
                android:padding="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="?attr/ic_share_friend"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/text_color_gray"
                android:text="更多"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>